{
	"manifest_version":2,
	"name": "Auto Sci-Hub",
	"version": "1.1",

	"description": "Auto-modify the url to load Sci-Hub page with your article",

	"permissions": [
		"tabs"
	],

	"background": {
		"scripts": ["shRedirect.js"]
	},

	"browser_action": {
        "default_icon": {
            "16": "icons/icon.svg",
            "19": "icons/icon.svg",
            "24": "icons/icon.svg",
            "32": "icons/icon.svg",
            "38": "icons/icon.svg"
      }
	}
}
